<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Docresult">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headertext_height"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OnBoard"
            style="@style/NewStyle"
            android:textColor="#006600"
            android:textSize="@dimen/header_text"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_layout"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/padding_layout"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:id="@+id/linear_layout_idtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Type :"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/normal_text"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    />
                <TextView
                    android:id="@+id/card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pan Card"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/normal_text"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="10dp"

                    />

            </LinearLayout>


            <TextView
                android:id="@+id/text_extracted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:text="Text Extracted"
                android:textColor="@color/black_color"
                android:textAllCaps="true"
                android:padding="25dp"
                />
            <LinearLayout
                android:id="@+id/linear_layout_extracted_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/padding_layout"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/normal_text"
                    android:padding="5dp"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black_color"/>
                <TextView
                    android:id="@+id/edt_name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_color"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/normal_text"
                    android:padding="5dp"
                    android:text=""/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text_name"
                    android:background="@color/black_color"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="@dimen/padding_layout"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_fName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Father Name"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/normal_text"
                    android:padding="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black_color"/>
                <TextView
                    android:id="@+id/edt_fName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_color"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/normal_text"
                    android:padding="5dp"
                    android:text=""/>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_layout"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_dob"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Dob"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/normal_text"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black_color"/>
                    <TextView
                        android:id="@+id/edt_dob_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/normal_text"
                        android:padding="5dp"
                        android:text=""/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text_name"
                    android:background="@color/black_color"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/padding_layout"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/edt_issuedDate"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Issued Date"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/normal_text"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black_color"/>
                    <TextView
                        android:id="@+id/name_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/normal_text"
                        android:padding="5dp"
                        android:text=""/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text_name"
                    android:background="@color/black_color"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/padding_layout"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/idDate"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="ID Number"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/normal_text"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black_color"/>
                    <TextView
                        android:id="@+id/edt_idNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/normal_text"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:text=""/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text_name"
                    android:background="@color/black_color"/>

            </LinearLayout>

            <Button
                android:id="@+id/but__verify_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textColor="#fff"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/round_border"
                android:padding="@dimen/padding_layout"
                android:textAllCaps="false"/>
            </LinearLayout>
            <Button
                android:id="@+id/but__try_Again_but"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Try Again"
                android:textColor="#fff"
                android:layout_marginTop="30dp"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/round_border"
                android:padding="@dimen/padding_layout"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
